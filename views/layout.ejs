<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <% if (typeof(title)==="undefined"){ %>
            Web2 PFI
        <% } else { %>
            <%= title %>
        <% } %>
    </title>
    <link href='https://fonts.googleapis.com/css?family=MedievalSharp' rel='stylesheet'>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
</head>
<body style="background-color: rgb(246, 246, 224);">    
    <%- body %>
</body>
</html>

<script>
    document.getElementById("languageToggle").addEventListener("click", function() {
    const currentLang = document.documentElement.lang;

    if (currentLang === "fr") {
        // Translate to English
        translateToEnglish();
        document.documentElement.lang = "en";
        document.getElementById("languageToggle").innerText = "FR";
    } else {
        // Translate to French
        translateToFrench();
        document.documentElement.lang = "fr";
        document.getElementById("languageToggle").innerText = "EN";
    }
});

function translateToEnglish() {
    document.querySelector("#villageTrad").innerText = "Village (Home)";
    document.querySelector("#profilTrad").innerText = "Profile";
    document.querySelector("#nousJoindreTrad").innerText = "Contact us";
    document.querySelector(".loginTrad").innerText = "Welcome, ";
    document.querySelector(".logoutTrad").innerText = "Logout";
    document.querySelector("#boutonTaverne").innerText = "Tavern";
    document.querySelector("#boutonJouer").innerText = "Play!";
    document.querySelector(".characterKeywords1").innerText = "User: ";
    document.querySelector(".characterKeywords2").innerText = "Class: ";
    document.querySelector(".characterKeywords3").innerText = "Inventory: ";
    document.querySelector(".characterKeywords4").innerText = "gold coins";
    document.querySelector("#welcome").innerHTML = 'Welcome to <span style="font-weight: bold; color: rgb(35, 100, 165);">Project Jjadd!</span>';
    document.querySelector("#pressPlay").innerHTML = "Press the <em>Play!</em> button to begin";
    document.querySelector("#pressShop").innerHTML = "Press the <em>Shop</em> button to buy items";
    document.querySelector("#pressTavern").innerHTML = "Press the <em>Tavern</em> button to enter the Tavern";
    document.querySelector("#itemsOrNone").innerHTML = `<%= user.inventory == undefined? "You've got no items yet! Visit the Shop!" : user.inventory %>`;
}

function translateToFrench() {
    document.querySelector("#villageTrad").innerText = "Village (Accueil)";
    document.querySelector("#profilTrad").innerText = "Profil";
    document.querySelector("#nousJoindreTrad").innerText = "Nous joindre";
    document.querySelector(".loginTrad").innerText = "Bienvenue, ";
    document.querySelector(".logoutTrad").innerText = "Se Déconnecter";
    document.querySelector("#boutonTaverne").innerText = "Taverne";
    document.querySelector("#boutonJouer").innerText = "Jouer!";
    document.querySelector(".characterKeywords1").innerText = "Utilisateur: ";
    document.querySelector(".characterKeywords2").innerText = "Classe: ";
    document.querySelector(".characterKeywords3").innerText = "Inventaire: ";
    document.querySelector(".characterKeywords4").innerText = "pièces d'or";
    document.querySelector("#welcome").innerHTML = 'Bienvenue sur <span style="font-weight: bold; color: rgb(35, 100, 165);">Project Jjadd!</span>';
    document.querySelector("#pressPlay").innerHTML = "Appuyez sur le bouton <em>Jouer!</em> pour commencer";
    document.querySelector("#pressShop").innerHTML = "Appuyez sur le bouton <em>Shop</em> pour magasiner";
    document.querySelector("#pressTavern").innerHTML = "Appuyez sur le bouton <em>Taverne</em> pour entrer dans la taverne";
    document.querySelector("#itemsOrNone").innerHTML = `<%= user.inventory == undefined? "Vous n'avez aucun item en votre possession!" : user.inventory %>`;
}
</script>