<%- include ('./partials/navigation') %>
<div id="accueilBox">
    <div id="accueil">
        <div id="tavernePic">
            <div>
                <button <%= userLanguage === 'fr' ? 'id=boutonBartenderFr' : 'id=boutonBartenderEn' %> class="parlerTrad"><%= translations.talk %></button>
                    <div id="bartenderDialogue" class="hiddenBartender"></div>
            </div>
            <div>
                <button <%= userLanguage === 'fr' ? 'id=boutonMysteryManFr' : 'id=boutonMysteryManEn' %> class="parlerTrad"><%= translations.talk %></button>
                    <div id="mysteryManDialogue" class="hiddenMysteryMan"></div>
            </div>
            <div>
                <a href="/village">
                    <button id="boutonSortirTaverne" class="sortirTrad"><%= translations.exit %></button>
                </a>
            </div>
            <div>
                <button id="boutonGamble"><%= translations.lottery %></button>
            </div>
        </div>
    </div>
        <div id="gameInfo">
            <% if (typeof(user) !="undefined"){ %>
                <p style="font-weight: bold;"><span class="characterKeywords"><%= translations.user %></span> <%= user.nom %></p>
                <p></p>
                <p style="font-weight: bold;"><span class="characterKeywords"><%= translations.class %></span> <%= user.characterClass %></p>
                <p style="font-weight: bold;"><span class="characterKeywords"><%= translations.inventory %></span> <%= user.inventory == undefined? "Vous n'avez aucun item en votre possession!" : user.inventory%> %></p>
                <br>
                <div style="display: flex;"><img style="height: 32px;width: auto; margin-top: -8px;" src="images/coins.png" alt=""> <p style="font-weight: bold;"><%= user.gold == undefined? '0' : user.gold %> <%= translations.currentGold %></p></div>
                <% } %>
            <hr style="border-width: 4px;">
            <br>
            <p id="welcome"><%= translations.welcomeProject %></p>
            <p id="pressPlay"><%= translations.pressPlay %></p>
            <p id="pressShop"><%= translations.pressShop %></p>
            <p id="pressTavern"><%= translations.pressTavern %></p>
            
        </div>
</div>

<script>
    if ("<%= userLanguage %>" === "fr") {
      document.write('<script src="/js/dialoguesFr.js"><\/script>');
    } else {
      document.write('<script src="/js/dialoguesEn.js"><\/script>');
    }
  </script>
