<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <%- include ('./partials/messages') %>
            <h1><i class="fas fa-solid fa-lock"></i></i><%= translations.modifyPwd %></h1>
            <br>
            <form action="/editPassword" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="email"><%= translations.editUser %></label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="abc@yandex.com"
                    value="<%= typeof email != 'undefined' ? email : '' %>" <%= typeof emailREADONLY != 'undefined' ? 'readonly' : '' %>
                    >
                </div>
                <br>
                <div class="form-group">
                    <label for="newPassword"><%= translations.newPwd %></label>
                    <input type="password" name="newPassword" id="newPassword" class="form-control" placeholder="••••••••••"
                    value="<%= typeof newPassword != 'undefined' ? newPassword : '' %>"
                    >
                </div>
                <br>
                <div class="form-group">
                    <label for="newPassword2"><%= translations.confirmModifyNewPwd %></label>
                    <input type="password" name="newPassword2" id="newPassword2" class="form-control" placeholder="••••••••••"
                    value="<%= typeof newPassword2 != 'undefined' ? newPassword2 : '' %>"
                    >
                </div>
                <br>
                <br>
                <button type="submit" class="btn btn-primary btn-block" style="background-color:#8b572a;border: 0px;"><%= translations.continue %></button>
                <div>
                    <p><a href="javascript:void(0);" onclick="goBack()" class="btn btn-secondary btn-block"><%= translations.backToProfile %></a></p>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="background-image"></div>
<script>
    function goBack() {
      window.history.back();
    }
</script>