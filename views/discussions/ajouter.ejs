<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
           
            <h1><i class="fas fa-book"></i>   Ajout d'un livre</h1>
            <form action="/discussions/ajouter" method="post" >
                <div class="form-group">
                <label for="auteur">Auteur</label>
                <input type="text" name="auteur" id="auteur" class="form-control" 
                value="<%=user.nom%>" disabled >
                <%- include('../partials/discussions/titre') %>    
                <%- include('../partials/discussions/commentaire') %>
                </div>
                               
                <button type="submit" class="btn btn-primary btn-block mb-2">Confirmer l'ajout d'une discussions</button>
                <a href="/discussions" class="btn btn-secondary btn-block mb-2">
                    Retour a la liste des livres
                </a>
            </form>
        </div>
    </div>
</div>