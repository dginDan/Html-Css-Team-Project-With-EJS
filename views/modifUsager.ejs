<%- include ('./partials/navigation') %>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <%- include ('./partials/messages') %>
            <h1>
                <i class="fas fa-user-plus"></i>
                <% if (user.roles && user.roles.includes('admin')) { %>
                  <%= translations.editUser %>
                <% } else { %>
                  <%= translations.editProfile %>
                <% } %>
              </h1>
            <form action="/userModif" method="post" >
                <%- include ('./partials/edit_nom_email') %>
                <% if (user.roles && user.roles.includes('admin')) { %>
                    <%- include ('./partials/edit_roles') %>
                  <% } %>
                  
                <br>
                <div class="form-group">
                    <a href="/editerPWD/<%= email %>"><%= translations.modifyPwd %></a>
                </div>
                <div class="form-group">
                    <a href="/editerImage/<%= email %>"><%= translations.modifyPicture %></a>
                </div>
                <br>
                <button type="submit" class="btn btn-primary btn-block">
                    <% if (user.roles && user.roles.includes('admin')) { %>
                      <%= translations.confirmModify %>
                    <% } else { %>
                      <%= translations.confirmModify %>
                    <% } %>
                </button>
                <div>
                <p><a href="/village" class="btn btn-secondary btn-block"><%= translations.backToHome %></a></p>
            </div>
            </form>
        </div>
    </div>
</div>

<div class="background-image"></div>